<%- include('../partials/header') %>
    <h2>Movie List</h2>
    <table>
    <thead>
        <tr>
        <th>Title</th>
        <th>Release Year</th>
        <th>Rating</th>
        <th>Cast</th>
        <th>Now Showing</th>
        </tr>
    </thead>
    <tbody>
        <!-- Write the line of EJS to iterate over movies using forEach -->
        <% movies.forEach(function(item) { %>
        <tr>
            <td><%= item.title %></td>
            <td><%= item.releaseYear %></td>
            <td><%= item.mpaaRating %></td>
            <td><%= item.cast.join(', ') %></td>
            <!-- finish the ternary expression to display 'Yes' or 'Nope' -->
            <td><%= item.nowShowing ? 'Yes' : 'No' %></td>
        </tr>
        <% }); %>
        <!-- Close the forEach using EJS here -->
    </tbody>
    </table>
<%- include('../partials/footer') %>